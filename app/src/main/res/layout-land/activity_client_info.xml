<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screens.ClientInfo">

    <LinearLayout
        android:id="@+id/CLientHadder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_210sdp"

        android:background="@color/nearGreen"
        android:orientation="horizontal"



        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.48000002">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:layout_margin="@dimen/_10sdp"

          >

            <TextView
                android:id="@+id/ClinetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="اسم العميل"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


        </LinearLayout>
        <!--      <LinearLayout-->
        <!--          android:layout_width="match_parent"-->
        <!--          android:layout_height="wrap_content"-->
        <!--          android:layout_marginTop="@dimen/_20sdp"-->
        <!--          android:orientation="horizontal">-->
        <!--          -->
        <!--      </LinearLayout>-->


    </LinearLayout>

    <ScrollView
        android:id="@+id/PersnolInformationScrool"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/CLientHadder"
        app:layout_constraintStart_toStartOf="@id/CLientHadder"
        app:layout_constraintTop_toTopOf="@id/CLientHadder"
        app:layout_constraintVertical_bias="0.63">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_70sdp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView

                android:id="@+id/PersnolInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="@dimen/_5sdp"


                android:layout_marginEnd="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_20sdp"


                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ImageCard"
                        android:layout_width="@dimen/_500sdp"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center"

                        app:shapeAppearanceOverlay="@style/roundedImageView"

                        app:strokeColor="@color/nearGreen"
                        app:strokeWidth="@dimen/_1sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_gravity="right"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/ClinetNam"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="سيد احمد السيد عوضين"
                                android:textColor="@color/nearGreen"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="الاسم: "
                                android:textColor="#000000"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/Adders"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="31 ش 66 مدينة نصر"
                                android:textColor="@color/nearGreen"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="العنوان: "
                                android:textColor="#000000"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right"

                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/PhonNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="01220000000"
                                android:textColor="@color/nearGreen"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="رقم الموبيل: "
                                android:textColor="#000000"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/DateTaske"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="06/07/2022"
                        android:textSize="@dimen/_10ssp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ListOfOperation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_7sdp"
                android:padding="@dimen/_5sdp"
                >


            </androidx.recyclerview.widget.RecyclerView>

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/ProggesPar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="true"
                android:layout_gravity="center"
                app:trackThickness="@dimen/_4sdp"


                />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>