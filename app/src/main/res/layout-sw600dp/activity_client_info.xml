        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/_5sdp"

        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_20sdp"


        app:layout_constraintEnd_toEndOf="@id/CLientHadder"

        app:layout_constraintStart_toStartOf="@id/CLientHadder"
        app:layout_constraintTop_toTopOf="@id/CLientHadder"
        app:layout_constraintVertical_bias="0.63">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/CardEgypt"

                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:adjustViewBounds="true"
                    android:maxWidth="@dimen/_50sdp"
android:layout_gravity="center"
                    android:maxHeight="@dimen/_50sdp"
                    android:scaleType="fitCenter"
                    app:shapeAppearanceOverlay="@style/roundedImageView2"

                    app:strokeColor="@color/nearGreen"
                    app:strokeWidth="@dimen/_1sdp" />

                <TextView
                    android:id="@+id/ClinetName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
android:textAlignment="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:text="sdsds sdsadsad"
                    android:textColor="@color/nearGreen"
                    android:textSize="@dimen/_9ssp" />
            </LinearLayout>






