                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_4sdp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ClinetNam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="سيد احمد السيد عوضين"
                        android:textColor="@color/black"
                        android:textIsSelectable="true"
                        android:layout_margin="@dimen/_2sdp"
                        android:gravity="right"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:textColor="@color/nearGreen"
                        android:layout_margin="@dimen/_2sdp"
                        android:gravity="right"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:padding="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Adders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="31 ش 66 مدينة نصر"
                        android:layout_margin="@dimen/_2sdp"
                        android:gravity="right"
                        android:textColor="@color/black"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/acualAdders"
                        android:textColor="@color/nearGreen"
                        android:textSize="@dimen/_12ssp"
                        android:layout_margin="@dimen/_2sdp"
                        android:gravity="right"
                        android:textStyle="bold" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/RequstAgentNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="0"
                        android:gravity="right"
                        android:layout_margin="@dimen/_2sdp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/orderNumbe"
                        android:textColor="@color/nearGreen"
android:layout_margin="@dimen/_2sdp"
                        android:gravity="right"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="@dimen/_2sdp"
                    android:gravity="right"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/DateTaske"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="06/07/2022"
                        android:gravity="right"
                        android:layout_margin="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hestoryOfOrder"
                        android:textColor="@color/nearGreen"
                        android:textSize="@dimen/_12ssp"
                        android:layout_margin="@dimen/_2sdp"
                        android:gravity="right"
                        android:textStyle="bold" />
                </TableRow>





